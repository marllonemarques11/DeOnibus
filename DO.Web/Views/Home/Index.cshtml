@model DeOnibusModel



<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item">
        <a class="nav-link active" id="first-tab" data-toggle="tab" href="#first" role="tab" aria-controls="first" aria-selected="true">Passagens à Venda</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" id="second-tab" data-toggle="tab" href="#second" role="tab" aria-controls="second" aria-selected="false">Passagens favoritas</a>
    </li>
</ul>
<div class="tab-content" id="TravelsForSale">
    <div class="tab-pane fade show active" id="first" role="tabpanel" aria-labelledby="first-tab">
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th class="text-center">
                        Bilhete
                    </th>
                    <th class="text-center">
                        Empresa
                    </th>
                    <th class="text-center">
                        Data de embarque
                    </th>
                    <th class="text-center">
                        Data de chegada
                    </th>
                    <th class="text-center">
                        Classe
                    </th>
                    <th class="text-center">
                        Preço
                    </th>
                </tr>
            </thead>
            <tbody>

                @foreach (var travel in Model.TravelsAvailable)
                {
                    <tr/>
                        <th class="text-nowrap" scope="row">@travel.Origin x @travel.Destination</th>
                        <td>@travel.Company.Name</td>
                        <td>@travel.DepartureDate.iso</td>
                        <td>@travel.ArrivalDate.iso</td>
                        <td>@travel.BusClass</td>
                        <td>@travel.Price</td>
                        <td> <input id="favoriteId-@travel.ObjectId" type="checkbox" /> </td>
                }
                </tbody>
        </table>
    </div>

</div>
        <div class="tab-content" id="FavoriteTravels">
            <div class="tab-pane fade show active" id="second" role="tabpanel" aria-labelledby="second-tab">
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th class="text-center">
                                Bilhete
                            </th>
                            <th class="text-center">
                                Empresa
                            </th>
                            <th class="text-center">
                                Data de embarque
                            </th>
                            <th class="text-center">
                                Data de chegada
                            </th>
                            <th class="text-center">
                                Classe
                            </th>
                            <th class="text-center">
                                Preço
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.FavoriteTravels != null)
                        {
                            @foreach (var travel in Model.FavoriteTravels)
                            {
                                <tr />
                                <th class="text-nowrap" scope="row">@travel.Origin x @travel.Destination</th>
                                <td>@travel.Company.Name</td>
                                <td>@travel.DepartureDate.iso</td>
                                <td>@travel.ArrivalDate.iso</td>
                                <td>@travel.BusClass</td>
                                <td>@travel.Price</td>
                                <td> <input id="favoriteId-@travel.ObjectId" type="checkbox" /> </td>
                            }
                        }
                        else
                        {
                            <td>Você não tem passagens favoritas no momento.</td>
                        }

                        </tbody>
                    </table>
            </div>

        </div>



